<div class="row">
  <div class="col-md-9 mx-auto">
    <div class="card">
      <div class="card-header">
        Editando usuario
      </div>
      <div class="card-body">
        <form action="/users/editado/{{usuario._id}}?_method=PUT" method="POST">
      <input  type="hidden" name="_method" value="PUT"  >
          <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Nombre" value="{{usuario.name}}">
          </div>
          <div class="form-group">
            <input type="email" class="form-control" name="email" placeholder="Email" value="{{usuario.email}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="password" placeholder="Password" value="{{usuario.password}}">
          </div>
          <div class="form-group">
            <input type="password" class="form-control" name="confirm_password" placeholder="Confirm Password" value="{{usuario.confirm_password}}">
          </div>
         
           <button class="btn btn-primary btn-block">
            Actualizar 
          </button>
        </form>
      </div>
    </div>
  </div>
</div>