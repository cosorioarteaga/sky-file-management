
<table class="table table-hover" >
  <thead >
    <tr  class="table-primary">
      <td scope="col" align="center">Id.</td>
      <td scope="col" align="center">Actividad</td>
       <td scope="col" align="center">nombrecliente</td>
      <td scope="col" align="center">observacion</td>
      <td scope="col" align="center">direccion</td>
      <td scope="col" align="center">Gestionar</td>
      
    </tr>
  </thead>
  <tbody>
       {{#each hojaruta}}
            <tr class="table-light"  >
               <td>{{idrecepciondocumento}}{{idregistro}}</td>
              <td>{{Actividad}}</td>
                <td>{{nombrecliente}}</td>
                <td>{{observacion}}</td>
                <td>{{direccion}}</td>
               
                <td>
                  <div class="card-footer text-muted">
                      <a href="#" 
                          class="btn btn-outline-secondary float-right" 
                          data-toggle="modal" 
                          data-target="#myModal{{@index}}">Registrar</a>
                  </div>
                </td>
            </tr>
       
              <!--INICIO : MODAL-->
                          
                      <form action="/mensajeria/registrar" method="POST">   
                            <div class="modal fade" id="myModal{{@index}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                              aria-hidden="true">
                              <div class="modal-dialog modal-dialog-scrollable" role="document">
                                <div class="modal-content">
                                  <div class="modal-header bg-light">
                                    <h5 class="modal-title" id="exampleModalLabel">{{nombrecliente}}</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                      <span aria-hidden="true">&times;</span>
                                    </button>
                                  </div>
                                  <div class="modal-body">
                                    <h6> {{observacion}}</h6>
                                    <!--<form action="/mensajeria/registrar" method="POST">-->
                                       
                                          <div class="form-group">
                                              <label for="identificacion_L" class="col-form-label">Identificacion:</label>
                                              <input type="text" class="form-control"  name="ced" id="ced"  >
                                            </div>
                                      
                                      <div class="input-group mb-3">
                                        <div class="input-group-prepend">
                                          <label class="input-group-text" for="estadovuelta">Gestión</label>
                                        </div>
                            
                                        <select class="custom-select" id="estadovuelta" name="estadovuelta">
                                          <option selected>Seleccione...</option>
                                          <option value="S">Realizada</option>
                                          <option value="N">No realizada</option>
                                        </select>
                                      </div>
                            
                                      <div class="form-group">
                                        <label for="observacionvuelta" class="col-form-label">Observación:</label>
                                        <textarea class="form-control"  name="observacionvuelta" id="observacionvuelta">prueba</textarea>
                                      </div>
                            
                                      <div class="form-group">
                                        <label for="idrecepciondocumento " class="col-form-label">idrecepciondocumento :</label>
                                        <input type="number" class="form-control" name="idrecepciondocumento" id="idrecepciondocumento" value="{{idrecepciondocumento}}"
                                          >
                                      </div>
                            
                                      <div class="form-group">
                                        <label for="idregistro  " class="col-form-label">idregistro :</label>
                                        <input type="number" class="form-control"  name="idregistro" id="idregistro" value="{{idregistro}}" >
                                      </div>

                                        <!--</form>-->
                                  </div>
                                  <!--modal-body-->
                            
                            
                                  <div class="modal-footer bg-light">
                                    <div class="row">
                                      <div class="col-auto mr-auto">
                                        <button type="button" class="btn  btn-outline-secondary" data-dismiss="modal">Cerrar
                                        </button>
                                      </div>
                                      <div class="col-auto">
                                        <button type="submit" class="btn btn-primary"> Grabar
                                        </button>
                                      </div>
                                    </div>
                                  </div>
                                </div>
                              </div>


                      </form>


              <!--FIN MODAL-->

       {{/each}}

  </tbody>
</table>


<script>

 $('#button').submit(function(e) {
       e.preventDefault();
       // Coding
       $('#IDModal').modal('toggle'); //or  $('#IDModal').modal('hide');
       return false;
});

</script>

