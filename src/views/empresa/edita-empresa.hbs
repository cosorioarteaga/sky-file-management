
<div class="col-md-9 mx-auto">
  <div class="card text-center">
    <div class="card-header">
      <h3>Editando empresa</h3>
    </div>
    <div class="card-body">
      <form action="/empresa/editada/{{empresa._id}}?_method=PUT" method="POST">
      <input  type="hidden" name="_method" value="PUT"  >
        <div class="form-group">
          <input type="text" name="title" class="form-control" placeholder="Title" value="{{empresa.title}}"/>
        </div>
        <div class="form-group">
          <textarea name="description" class="form-control" placeholder="Description">{{empresa.description}}  </textarea>
        </div>
        <div class="form-group">
          <input type="number" name="identificacion" class="form-control" placeholder="Identificacion RUC"  value="{{empresa.identificacion}}"  ></input>
        </div>

        <div class="form-group">
          <input type="number" name="numcolenvia" class="form-control" placeholder="Número de columnas envía" value="{{empresa.numcolenvia}}"  >
        </div>
        <div class="form-group">
                  <input type="numer" name="numcolrecibe" class="form-control" placeholder="Número de columnas recibe"  value="{{empresa.numcolrecibe}}" >
        </div>

        <div class="form-group">
          <input type="text" name="columna_debito" class="form-control" placeholder="Nombre de la columna del débito" value="{{empresa.columna_debito}}"  >
        </div>
        


        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Actualizar
          </button>
        </div>
      </form>
    </div>
  </div>
</div>